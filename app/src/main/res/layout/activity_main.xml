<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chuckree.chucksapportfolio.MainActivity"
    android:background="#2E3D49">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Nanodegree Apps!"
            android:id="@+id/textView_my_nd_apps"
            android:layout_gravity="center_horizontal"
            android:textColor="#00B8EA"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_margin="@dimen/button_margin" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Movies"
            android:id="@+id/button_popular_movies"
            android:layout_gravity="center_horizontal"
            android:contextClickable="false"
            android:width="240dp"
            android:background="@color/darkButton"
            android:textColor="@android:color/white"
            android:layout_margin="@dimen/button_margin" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock Hawk"
            android:id="@+id/button_stock_hawk"
            android:layout_gravity="center_horizontal"
            android:width="240dp"
            android:textColor="@android:color/white"
            android:background="@color/darkButton"
            android:layout_margin="@dimen/button_margin" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build it Bigger"
            android:id="@+id/button_build_it_bigger"
            android:layout_gravity="center_horizontal"
            android:width="240dp"
            android:textColor="@android:color/white"
            android:background="@color/darkButton"
            android:layout_margin="@dimen/button_margin" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Your App Material"
            android:id="@+id/button_make_your_app_material"
            android:layout_gravity="center_horizontal"
            android:width="240dp"
            android:textColor="@android:color/white"
            android:background="@color/darkButton"
            android:layout_margin="@dimen/button_margin" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Ubiquitous"
            android:id="@+id/button_go_ubiquitous"
            android:layout_gravity="center_horizontal"
            android:width="240dp"
            android:textColor="@android:color/white"
            android:background="@color/darkButton"
            android:layout_margin="@dimen/button_margin" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capstone"
            android:id="@+id/button_capstone"
            android:layout_gravity="center_horizontal"
            android:width="240dp"
            android:textColor="@android:color/white"
            android:background="@color/darkButton"
            android:layout_margin="@dimen/button_margin" />
    </LinearLayout>
</ScrollView>
